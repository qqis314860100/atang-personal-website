{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动 Next.js (最可靠方式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Chrome 浏览器",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Next.js全栈调试",
      "configurations": ["启动 Next.js (最可靠方式)", "Chrome 浏览器"]
    }
  ]
}
